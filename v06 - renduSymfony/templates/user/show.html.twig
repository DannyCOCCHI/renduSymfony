        <h1>{{ user.email }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('user_index') }}">Retour Ã  la liste</a>

        <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

