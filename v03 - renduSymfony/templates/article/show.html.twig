{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <section class="container col center">
        <h1>{{ article.titre }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ article.titre }}</td>
                </tr>
                <tr>
                    <th>Accroche</th>
                    <td>{{ article.accroche }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ article.contenu }}</td>
                </tr>
                <tr>
                    <th>Featured_image</th>
                    <td>
                        {% if article.featuredImage %}
                            <img src="{{ asset('img/article/') }}{{ article.featuredImage }}" alt="Oups :(">
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('article_index') }}">back to list</a>

        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

        {{ include('article/_delete_form.html.twig') }}
    </section>
{% endblock %}
