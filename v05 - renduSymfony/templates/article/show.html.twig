{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <section class="container col center color-1">
        <h1>{{ article.titre }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ article.titre }}</td>
                </tr>
                <tr>
                    <th>Accroche</th>
                    <td>{{ article.accroche }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ article.contenu|raw }}</td>
                </tr>
                <tr>
                    <th>Featured_image</th>
                    <td>
                        {% if article.featuredImage %}
                            <img src="{{ asset('img/article/') }}{{ article.featuredImage }}" alt="">
                        {% else %}
                            
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('article_index') }}">back to list</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
            {{ include('article/_delete_form.html.twig') }}
        {% endif %}

        {{ form(commentForm) }}

        {% for Commentaire in Commentaire %}
            {{ Commentaire.contenu }}
        {% endfor %}

    </section>
{% endblock %}
